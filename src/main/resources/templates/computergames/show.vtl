
<div class="flex-advert-container">

    <div class="flex-advert">

        <div class="advert-image"><img src="$computerGame.getImageUrl()" alt="Image: $computerGame.getTitle()" width="225rem"></div>
        <div class="title"> $computerGame.getTitle() </div>
        <div class="advert-description"> $computerGame.getDescription() </div>
        <div class="advert-price">Price: $computerGame.getPrice()Y</div>
        <div class="advert-seller"> Seller: <a href="/users/$computerGame.getUser().getId()">$computerGame.getUser().getUsername()</a></div>
        <div class="console">Console: $computerGame.getConsole().getName()</div>
        <div class="age"> Age rating: $computerGame.getAgeClassification().getAge()</div>
        <div class="game-type"> Type: $computerGame.getGameType().getName()</div> <br>

    <div>
     <form class="advert-button" action="/computergames/$computerGame.getId()/edit"><input type="submit" id="edit_button" value="Edit"></form>

     <form class="advert-button" action="/computergames/$computerGame.getId()/delete" method="post"><input type="submit" id="delete_button" value="Delete"></form>
        </div>
    </div>
</div>
