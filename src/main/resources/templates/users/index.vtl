<p class="pageHeader">All Users</p>

<div class="container">
    <table>
        <tr>
            <th>Username</th>
            <th>Credit</th>
        </tr>
        #foreach ($user in $users)
        <tr>
            <td><a href="/users/$user.getId()">$user.getUsername()</a></td>
            <td>$user.getCredit()</td>
            <td>
                <form action="/users/$user.getId()/edit">
                    <input type="submit" id="edit_button" value="Edit">
                </form>
            </td>
            <td>
                <form action="/users/$user.getId()/delete" method="post">
                    <input type="submit" id="delete_button" value="Delete">
                </form>
            </td>
        </tr>
        #end
    </table>
</div>

<br>
<br>

<form action="/users/new">
    <input type="image" src="/images/add_icon.png" height="30rem">
</form>